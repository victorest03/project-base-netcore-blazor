@inject IJSRuntime JSRuntime;
<!-- sidebar: style can be found in sidebar.less -->
<section class="sidebar">
    <!-- Sidebar user panel -->
    <div class="user-panel">
        <div class="pull-left image">
            <img src="images/user2-160x160.jpg" class="img-circle" alt="User Image">
        </div>
        <div class="pull-left info">
            <p>Alexander Pierce</p>
        </div>
    </div>
    <!-- sidebar menu: : style can be found in sidebar.less -->
    <ul class="sidebar-menu" data-widget="tree">
        <li class="header">MAIN NAVIGATION</li>
        <NavElement href="/" icon="fa fa-dashboard" text="Dashboard" />
        <NavElement href="/Error" icon="fa fa-book" text="Error" />
        <NavElement href="#" icon="fa fa-share" text="Multilevel">
            <NavElement href="/LevelOne" icon="fa fa-circle-o" text="Level One" />
            <NavElement href="#" icon="fa fa-circle-o" text="Level One">
                <NavElement href="/LevelTwo" icon="fa fa-circle-o" text="Level Two" />
            </NavElement>
        </NavElement>
    </ul>
</section>
<!-- /.sidebar -->
@code
{

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("functions.layout.configNav");
        }
    }

}
